{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "vercel-build": "prisma generate && prisma migrate deploy && remix build",
    "dev": "npm-run-all dev:build:* --parallel dev:watch:* dev:run:server",
    "dev:build:server": "cross-env NODE_ENV=development esbuild --platform=node --format=cjs ./servers/express.ts --outdir=api --bundle",
    "dev:watch:remix": "cross-env NODE_ENV=development remix watch",
    "dev:run:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config ./api/express.js | pino-pretty",
    "typecheck": "tsc",
    "gen": "run-p gen:*",
    "gen:db-typings": "prisma generate",
    "gen:theme-typings": "chakra-cli tokens app/styling/theme.ts",
    "postinstall": "npm run gen:theme-typings"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.17",
    "@chakra-ui/react": "^2.4.9",
    "@emotion/react": "^11.10.5",
    "@emotion/server": "^11.10.0",
    "@emotion/styled": "^11.10.5",
    "@hookform/resolvers": "^2.9.10",
    "@prisma/client": "^4.9.0",
    "@remix-run/node": "1.11.1",
    "@remix-run/react": "^1.11.1",
    "@remix-run/vercel": "^1.11.1",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@vercel/node": "^2.6.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "esbuild": "^0.17.6",
    "express": "^4.18.2",
    "framer-motion": "^6.5.1",
    "nanoid": "^4.0.0",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "pino-seq": "^0.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.42.1",
    "remix-auth": "^3.4.0",
    "remix-auth-google": "^1.2.0",
    "slugify": "^1.6.5",
    "ts-node": "^10.9.1",
    "zod": "^3.20.2",
    "zodix": "^0.4.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^2.3.0",
    "@remix-run/dev": "^1.11.1",
    "@remix-run/eslint-config": "^1.11.1",
    "@remix-run/serve": "^1.11.1",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "eslint": "^8.27.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^4.9.0",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
